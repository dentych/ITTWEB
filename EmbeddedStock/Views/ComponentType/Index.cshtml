@model System.Collections.Generic.List<ComponentType>

@{
    ViewData["Title"] = "ComponentTypes";
}

<div class="row">
  <div class="col-xs-12 col-md-8">
    <h2>List of ComponentTypes</h2>
    <table class="table table-hover">
      <tr>
        <th>#</th>
        <th>Component name</th>
        <th>Components</th>
        <th>Actions</th>
      </tr>
      @foreach (var componentType in Model)
      {
          <tr>
            <td>@componentType.ComponentTypeId</td>
            <td>@componentType.ComponentName</td>
            <td>@componentType.Components.Count</td>
            <td>
              <a asp-action="Show" asp-route-id="@componentType.ComponentTypeId">Show</a>
              &nbsp;<a asp-action="Delete" asp-route-id="@componentType.ComponentTypeId">Delete</a>
            </td>
          </tr>
      }
    </table>
    <a asp-action="Create"><button class="btn btn-primary">Create ComponentType</button></a>
  </div>
</div>